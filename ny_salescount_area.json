{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "ny_comparison/NY_salescount_yearly.csv"
  },
  "width": "container",
  "height": 360,
  "transform": [
    {
      "filter": "isValid(datum.Sales) && datum.Sales > 0"
    },
    {
      "calculate": "toDate(datum.Year + '-01-01')",
      "as": "YearDate"
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Sales",
          "as": "TotalSales"
        }
      ],
      "groupby": [
        "RegionName"
      ]
    }
  ],
  "mark": {
    "type": "area",
    "interpolate": "monotone",
    "opacity": 0.85
  },
  "encoding": {
    "x": {
      "field": "YearDate",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "format": "%Y"
      }
    },
    "y": {
      "field": "Sales",
      "type": "quantitative",
      "stack": "zero",
      "axis": {
        "title": "Total Sales Count"
      }
    },
    "color": {
      "field": "RegionName",
      "type": "nominal",
      "title": "Region",
      "sort": {
        "field": "TotalSales",
        "order": "descending"
      }
    },
    "tooltip": [
      {
        "field": "RegionName",
        "type": "nominal",
        "title": "Region"
      },
      {
        "field": "Year",
        "type": "quantitative",
        "title": "Year"
      },
      {
        "field": "Sales",
        "type": "quantitative",
        "title": "Sales Count",
        "format": ","
      }
    ]
  },
  "config": {
    "axis": {
      "labelColor": "#1f2f43",
      "titleColor": "#1f2f43"
    },
    "legend": {
      "labelColor": "#1f2f43",
      "titleColor": "#1f2f43"
    },
    "view": {
      "stroke": "transparent"
    }
  }
}
